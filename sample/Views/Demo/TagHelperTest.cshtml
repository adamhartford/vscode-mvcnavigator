@{
    ViewData["Title"] = "Tag Helper Navigation Test";
}

<h2>ASP.NET Core Tag Helper Navigation Test</h2>

<div class="navigation-examples">
    <h3>Basic Tag Helpers</h3>
    
    <!-- Basic anchor tag helper - should navigate to Home/Index -->
    <a asp-action="Index" asp-controller="Home">Home Page</a>
    
    <!-- Basic form tag helper - should navigate to User/Create -->
    <form asp-action="Create" asp-controller="User" method="post">
        <input type="submit" value="Create User" />
    </form>
    
    <h3>Area-Aware Tag Helpers</h3>
    
    <!-- Area-specific navigation - should navigate to Admin area Product/Details -->
    <a asp-action="Details" asp-controller="Product" asp-area="Admin">Admin Product Details</a>
    
    <!-- Area-specific form - should navigate to Catalog area Product/Update -->
    <form asp-action="Update" asp-controller="Product" asp-area="Catalog" method="post">
        <input type="submit" value="Update Product" />
    </form>
    
    <h3>Complex Tag Helper Scenarios</h3>
    
    <!-- Multiple attributes with flexible spacing -->
    <a asp-action = "Delete" 
       asp-controller="User" 
       asp-route-id="123" 
       class="btn btn-danger">Delete User</a>
    
    <!-- Single quotes -->
    <a asp-action='Edit' asp-controller='Product' asp-area='Admin'>Edit Product</a>
    
    <!-- Mixed formatting -->
    <form asp-action="Register"
          asp-controller="Account"
          asp-area=""
          method="post"
          class="registration-form">
        <div class="form-group">
            <input type="email" name="Email" />
        </div>
        <input type="submit" value="Register" />
    </form>
    
    <h3>Navigation Buttons</h3>
    
    <!-- Different controller actions -->
    <a asp-action="About" asp-controller="Home" class="btn btn-info">About Us</a>
    <a asp-action="Contact" asp-controller="Home" class="btn btn-primary">Contact</a>
    <a asp-action="PrivacyPolicy" asp-controller="Home" class="btn btn-secondary">Privacy</a>
    
    <!-- Area-specific actions -->
    <a asp-action="Dashboard" asp-controller="Home" asp-area="Admin" class="btn btn-warning">Admin Dashboard</a>
    
    <h3>Form Variations</h3>
    
    <!-- Different form actions -->
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="submit" value="Login" />
    </form>
    
    <form asp-action="Logout" asp-controller="Account" method="post">
        <input type="submit" value="Logout" />
    </form>
    
    <!-- Area-specific forms -->
    <form asp-action="CreateProduct" asp-controller="Product" asp-area="Catalog" method="post">
        <input type="submit" value="Create Product" />
    </form>
</div>

<div class="comparison-examples">
    <h3>Traditional vs Tag Helper Comparison</h3>
    
    <!-- Traditional HTML helpers (should still work) -->
    @Html.ActionLink("Traditional Link", "Index", "Home")
    @using (Html.BeginForm("Create", "User")) {
        <input type="submit" value="Traditional Form" />
    }
    
    <!-- Modern tag helpers (new functionality) -->
    <a asp-action="Index" asp-controller="Home">Modern Tag Helper Link</a>
    <form asp-action="Create" asp-controller="User" method="post">
        <input type="submit" value="Modern Tag Helper Form" />
    </form>
</div>
